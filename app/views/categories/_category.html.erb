<div id="<%= dom_id category %>">
  <div class="flex items-center justify-between m-2 shadow border border-dotted border-gray-700/50 rounded-lg ">
    <div class="p-3">
      <p class="font-bold tracking-wide font-bold text-lg md:text-3xl">
        <%= category.name %>
      </p>
      <div class="text-gray-600 mt-1 text-sm">
        <%= pluralize(category.items.count, 'item') %>,
        <%= pluralize(category.entries.count, 'entries') %>
      </div>
    </div>
    <div class="font-bold md:text-2xl p-3 mr-3 rounded-md bg-gray-500/80 text-gray-50 items-center"><%= category.total %></div>
  </div>
  <% if local_assigns[:full] %>
    <h1 class="w-full font-extrabold px-5 bg-gray-500/80 text-gray-100 mt-4 rounded">Items</h1>
    <div class="w-full grid grid-cols-3">
      <% category.items.each do |item| %>
        <%= link_to item do %>
          <%= render 'items/item_embed', item: item %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
