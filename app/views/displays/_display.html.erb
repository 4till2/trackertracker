<div id="<%= dom_id display %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Dashboard:</strong>
    <%= display.dashboard_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Type:</strong>
    <%= display.type %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this display", display, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this display', edit_display_path(display), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
