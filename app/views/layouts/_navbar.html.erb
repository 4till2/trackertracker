<div class="flex w-full justify-between items-center p-3">
  <div class="">
    <h1 class="font-extrabold text-4xl text-gray-800 mb-1"><%= title %></h1>
    <div class="w-full flex items-end text-xs md:text-lg text-gray-600 hover:text-gray-800">
      <div class="pr-3">
        <% if current_page?(:controller => 'entries') %>
          <div class="text-gray-400 font-semibold border-b">Entries</div>
        <% else %>
          <%= link_to 'Entries', entries_path, class: 'hover:border-b hover:border-b-gray-400' %>
        <% end %>
      </div>
      <div class="pr-3">
        <% if current_page?(:controller => 'items') %>
          <div class="text-gray-400 font-semibold border-b">Items</div>
        <% else %>
          <%= link_to 'Items', items_path, class: 'hover:border-b hover:border-b-gray-400' %>
        <% end %>
      </div>
      <div class="pr-3">
        <% if current_page?(:controller => 'categories') %>
          <div class="text-gray-400 font-semibold border-b">Categories</div>
        <% else %>
          <%= link_to 'Categories', categories_path, class: 'hover:border-b hover:border-b-gray-400' %>
        <% end %>
      </div>
    </div>
  </div>
  <% if title == 'Entries' %>
    <%= link_to 'New Entry', new_entry_path, class: "rounded-lg p-4 font-semibold border-dashed border border-black text-gray-600 block font-large md:text-md hover:bg-gray-600 hover:text-gray-200 rotate-3" %>
  <% end %>
  <% if title == 'Items' %>
    <%= link_to 'New Item', new_item_path, class: "rounded-lg p-4 font-semibold border-dashed border border-black text-gray-600 block font-large md:text-md hover:bg-gray-600 hover:text-gray-200 rotate-3" %>
  <% end %>
  <% if title == 'Categories' %>
    <%= link_to 'New Category', new_category_path, class: "rounded-lg p-4 font-semibold border-dashed border border-black text-gray-600 block font-large md:text-md hover:bg-gray-600 hover:text-gray-200 rotate-3" %>
<% end %>
</div>

