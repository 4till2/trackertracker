<div class="mx-auto w-full flex">
  <div class="mx-auto w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%= render 'layouts/navbar', title: 'Items' %>
    <div id="items" class="w-full my-3">
      <% unless @items.present? %>
        <%= link_to 'Create your first Item!', new_item_path, class: "rounded-lg p-24 text-center font-semibold border-dashed border border-black text-gray-600 block font-large md:text-md hover:bg-gray-600 hover:text-gray-200 m-4" %>
      <% end %>
      <% @items.each do |item| %>
        <%= link_to item do %>
          <%= render item %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
